@using Webgentle.BookStore.Models
@{
    ViewData["Title"] = "All Books";
}

 @model IEnumerable<BookModel>
<div class="container">
    <h3 class="display-4">All Books</h3>
    <div class="row">

        @foreach(var book in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlms=""></svg> 
                        <div class="card-body">
                            <h3 class="card-text">@book.Title</h3>
                            <p class="card-text"> @book.Descrption </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    @*<a asp-controller="book" asp-action="GetBook"  asp-route-id="@book.Id"  asp-fragment="similarBooks" class="btn btn-sx btn-outline-secondary">View Details</a>*@
                                    <a asp-route="bookDetailsRoute"  asp-route-id="@book.Id" class="btn btn-sx btn-outline-secondary">View Details</a>
                                </div>
                                <small class="text-muted"> @book.Author </small>
         
                            </div>
                        </div>
                </div>
            </div>
        }
    </div>
</div>
